<Fluent:RibbonWindow x:Class="FruitMarket.MyFirstWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:FruitMarket"
                     xmlns:view="clr-namespace:FruitMarket.View"
                     xmlns:Fluent="urn:fluent-ribbon"
                     Title="My first RibbonWindow" 
                     Width="800" 
                     Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon Grid.Row="0">

            <Fluent:RibbonTabItem Header="Home">
                <Fluent:RibbonGroupBox Header="Main">
                    <Fluent:Button Header="Home"
                                   Command="{Binding ShowHomeViewCommand}"
                                   LargeIcon="../Images/iconfinder_Home_131778.png"/>
                    <Fluent:Button Header="List"
                                   Command="{Binding ShowMainListCommand}"
                                   LargeIcon="../Images/iconfinder_List_131880.png"/>
                    <Fluent:Button Header="List"
                                   Command="{Binding ShowProductListCommand}"
                                   LargeIcon="../Images/iconfinder_List_131880.png"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>

        <ContentControl Grid.Row="1" 
                        Content="{Binding ActiveView, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!--<TabControl Grid.Row="1">
            <TabItem Header="{Binding ActiveView.Title}">
                <ContentControl Content="{Binding ActiveView, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            </TabItem>
        </TabControl>-->

        <view:LogView Grid.Row="2"/>

    </Grid>
</Fluent:RibbonWindow>