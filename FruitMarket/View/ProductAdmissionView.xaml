<UserControl x:Class="FruitMarket.View.ProductAdmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:FruitMarket.View"
             xmlns:converter="clr-namespace:FruitMarket.Converter"
             xmlns:local="clr-namespace:FruitMarket.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Incoming Products:" 
                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                   FontWeight="Bold" FontSize="20"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Margin="10,10,10,10" Text="Lieferant:"
                       FontWeight="Bold"/>
            <ComboBox Grid.Row="1" Grid.Column="0"
                      Margin="10,10,10,10"
                      ItemsSource="{Binding Suppliers}"
                      SelectedItem="{Binding CurrentSupplier}"/>
            <Button Margin="10,10,10,10"
                    Content="Add Supplier"
                    Command="{Binding NewSupplierCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Add new Supplier:"
                       FontWeight="Bold" Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <view:SupplierView Grid.Row="1" Margin="0,0,0,10"
                               IsEnabled="{Binding IsEditing}"
                           DataContext="{Binding CurrentSupplier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <DockPanel Grid.Row="2" HorizontalAlignment="Right">
                <Button Command="{Binding SaveSupplierCommand}" 
                        Width="30" Height="30" Background="Transparent"
                        BorderThickness="0"
                        ToolTip="Save Supplier"
                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Image Source="../Images/iconfinder_flat-style-circle-add_1312548.png"/>
                </Button>
                <Button Command="{Binding DeleteSupplierCommand}" 
                        Width="30" Height="30" Background="Transparent"
                        BorderThickness="0"
                        ToolTip="Delete Supplier"
                        Visibility="{Binding CurrentSupplier, Converter={StaticResource NullToVisibilityConverter}}">
                    <Image Source="../Images/iconfinder_Cancel_131742.png"/>
                </Button>
            </DockPanel>
        </Grid>


        <StackPanel Grid.Row="2" Grid.ColumnSpan="3">
            <DataGrid Grid.Row="2" Grid.ColumnSpan="3"
                  CanUserAddRows="True" CanUserDeleteRows="True"
                  AutoGenerateColumns="False" ItemsSource="{Binding Fruits}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sorte" Binding="{Binding Sort}"/>
                    <DataGridTextColumn Header="Menge" Binding="{Binding Amount}"/>
                    <DataGridTextColumn Header="Kategorie" Binding="{Binding Sort}"/>
                    <DataGridTextColumn Header="Einkaufsdatum" Binding="{Binding PurchaseDate}"/>
                    <DataGridTextColumn Header="Mindesthaltbarkeitsdatum" Binding="{Binding Expiration}"/>
                    <DataGridTextColumn Header="Reifungsdauer" Binding="{Binding Mature}"/>
                    <DataGridTextColumn Header="Herkunft" Binding="{Binding Origin}"/>
                    <DataGridTextColumn Header="Einkaufspreis" Binding="{Binding PurchasePrice}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Command="{Binding AddFruitsCommand}" 
                    Width="32" Height="32" Background="Transparent"
                    BorderThickness="0" HorizontalAlignment="Right"
                    Margin="10,10,10,10"
                    ToolTip="Save Incoming Fruits"
                    Visibility="{Binding CurrentSupplier, Converter={StaticResource NullToVisibilityConverter}}">
                <Image Source="../Images/iconfinder_Save_131694.png"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
